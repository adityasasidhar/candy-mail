{
    "manifest_version": 2,
    "name": "Candy Mail",
    "version": "1.0",
    "description": "Draft personalized cold emails instantly from any profile or webpage.",
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite",
        "https://linkedin.com/*",
        "https://api.linkedin.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Draft Cold Email (Alt+C)",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Alt+C"
            },
            "description": "Open Candy Mail popup"
        },
        "generate_email": {
            "suggested_key": {
                "default": "Alt+G",
                "mac": "Alt+G"
            },
            "description": "Generate email from current page"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "candy-mail@example.com",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ],
                "reason": "This extension does not collect or transmit any user data. All data is stored locally in the browser."
            }
        }
    }
}